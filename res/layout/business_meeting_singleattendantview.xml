<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mimi_connect_no_corner_clear_button_background"
    android:orientation="vertical" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/userId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="Jirani Mtuyule"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/userTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="Software Developer"
                android:textColor="@color/mimiColor"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />
            <TextView
                android:id="@+id/userOrganization"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="Mimi Mobile"
                android:textColor="@color/mimiColor"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
        <Button
            android:id="@+id/businessMeetingSaveBusinessCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/mimi_connect_clear_button_background"
            android:drawableLeft="@drawable/mimi_connect_profile_save"
            android:gravity="center_vertical|left"
            android:onClick="doStartMeeting"
            android:text="Save Business Card"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>