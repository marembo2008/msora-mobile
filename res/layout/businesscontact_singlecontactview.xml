<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singlecontactview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mimi_connect_two_color_linear_gradient_no_corner"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/businessContactImage"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:contentDescription="@string/businessContact_singleContactImageViewDescription"
        android:gravity="center_vertical|left"
        android:src="@drawable/mimi_connect_contactphoto" />
    <TextView
        android:id="@+id/viewBusinessContact"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/businessContactImage"
        android:background="@null"
        android:gravity="center_vertical|left"
        android:text="@string/businessContact_singleContactViewLabel"
        android:textColor="@color/black"
        android:textSize="15dp" />
</RelativeLayout>